<% content_for :title, @blog.title.titleize %>
<% content_for :tags, @blog.meta_keyword %>
<% content_for :meta_description, @blog.meta_description %>
<% @blog.post_summary %>
<% @blog.category %>


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @blog.title.titleize %></h3>
  </div>
  <div class="panel-body">
    
    <p>
      By:
      <%= User.find(@blog.user_id).first_name.titleize %> 
      <%= User.find(@blog.user_id).last_name.titleize %>
    </p>
    <br/>
    <p>
      <%= @blog.post.html_safe %>
    </p>
    
    
    </div>
  <div class="panel-footer">
    <%= link_to 'Back', blogs_path %>
    <% if user_signed_in? && current_user.admin == 41 %>
      | <%= link_to 'Edit', edit_blog_path(@blog) %> | 
      <%= link_to 'Delete Post', blog_path, method: :delete, data: { confirm: 'Are you sure?' } %> |
    <% end %> 
  </div>
</div>

<% content_for :title, "Blog Posts" %>



</div>

				<section class="page-top">
					<div class="container">
						<div class="row">
							<div class="col-md-12">
								<ul class="breadcrumb">
									<li><%= link_to "Home", root_path %></li>
									<li class="active">Blog Posts</li>
								</ul>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<h1>Blog Posts</h1>
							</div>
						</div>
					</div>
				</section>

<div class="container">



<br/><br/>


    <% @blogs.order("created_at desc").each do |blog| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= link_to blog.title.titleize, blog %></h3>
        </div>
        <div class="panel-body">
              
              <%= blog.post_summary %>
        </div>
          <div class="panel-footer">
            <%= link_to 'Continue Reading...', blog %>
            <% if user_signed_in? && current_user.admin == 41 %>
              (<%= link_to 'Delete Post', blog, method: :delete, data: { confirm: 'Are you sure?' } %>)
            <% end %> 
          </div>
      </div>
      <br/><br/>
    <% end %>
  
<br>



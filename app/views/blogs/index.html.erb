
<h1>Blog Posts</h1>
<br/><br/>


    <% @blogs.order("created_at desc").each do |blog| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= link_to blog.title.titleize, blog %></h3>
        </div>
        <div class="panel-body">
              
              <%= blog.post_summary %>
        </div>
          <div class="panel-footer"><%= link_to 'Continue Reading...', blog %></div>
      </div>
      <br/><br/>
    <% end %>
  
<br>


